.card
  background: white
  float: left
  position: relative
  width: 300px
  height: auto
  margin: 10px
  box-shadow: 1px 1px 2px #999
  border-radius: 2px

  .header
    position: relative
    float: left
    width: 100px
    height: 160px
    background-repeat: no-repeat
    background-position: center
    background-size(cover)

  .header.wide
    background-size(100px)

  .content
    padding: 10px
    overflow: hidden
    float: left
    width: 200px

    .name
    .event
      color: #333
      font-size: 18px
      font-weight: 500
      margin-bottom: 1px

    .edit
      text-decoration: none
      color: #333

    .contacts
      white-space: pre-wrap

    .status
      margin: 5px
      padding: 3px 7px
      white-space: nowrap
      border-radius: 7px
      color: #fff
      font-weight: 400

    .details
      margin-top: 10px

    .unread
      margin: 5px
      text-transform: uppercase
      color: #f00000
      font-weight: 500

.card.full
  padding: 10px
  width: 100%
  .content
    padding: 0px
    width: 100%
    word-break: break-word
    hyphens: auto

  .status
    padding: 0 5px
    font-weight: 300

  .ink-form
    .ink-button
      margin: 0 0px

