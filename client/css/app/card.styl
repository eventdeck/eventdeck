.card
  background: white
  float: left
  position: relative
  width: 300px
  height: auto
  margin: 10px
  box-shadow: 1px 1px 2px #999
  border-radius: 2px
  
  .header
    position: relative
    float: left
    width: 100px
    height: 160px
    background-repeat: no-repeat
    background-position: center
    -webkit-background-size: cover
    -moz-background-size: cover
    -o-background-size: cover
    background-size: cover

  .content
    overflow: hidden
    float: left
    width: 200px
    padding: 10px
  
    .name
      color: #333
      font-size: 18px
      font-weight: 500
      margin-bottom: 1px