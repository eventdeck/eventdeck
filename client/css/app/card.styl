.card
  background: white
  float: left
  position: relative
  width: 300px
  height: auto
  margin: 10px
  box-shadow: 1px 1px 2px #999
  border-radius: 2px

  .header
    position: relative
    float: left
    width: 100px
    height: 160px
    background-repeat: no-repeat
    background-position: center
    background-size(cover)

  .header.wide
    background-size(100px)

  .content
    padding: 10px
    overflow: hidden
    float: left
    width: 200px

    .name
      color: #333
      font-size: 18px
      font-weight: 500
      margin-bottom: 1px

  .contacts
    white-space: pre-wrap

.companies
  .contacts
    white-space: pre-wrap


.card.full
  padding: 10px
  width: 100%
  .content
    padding: 0px
    width: 100%
    white-space: pre
    word-break: break-word;
    hyphens: auto;

  .ink-form
    .ink-button
      margin: 0 0px;

