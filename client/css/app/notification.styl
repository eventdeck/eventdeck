.notification
  padding-bottom: 1.2em
  border-bottom: 1px
  border-bottom-style: dashed
  border-color: #ddd
  
  .ink-label
    font-size: 1em !important
  .header
    i
      padding-left: 5px
      padding-right: 5px
    .me
      background: $me
    .others
      background: $others
    .coordination
      background: $coordination

  .description
    a
      border-radius: 2px !important
      padding: 0 0.35em !important
      display: inline !important
      text-decoration: none
    a:hover
      color: white
      background: #aaa !important
  .description>span
      padding-right: 0.2em
      
.notification.unread
  background: $unread